@model IEnumerable<ProyectoPrestamo.Models.Garantium>

@{
    ViewData["Title"] = "Index";
}

<h1>Garantía</h1>

<p>
    <a asp-action="Create">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPrestamoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPrestamoNavigation.IdPrestamo)
            </td>
            <td>
                <a  asp-action="Edit" asp-route-id="@item.IdGarantia">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdGarantia">Detalles</a> |
                <a  asp-action="Delete" asp-route-id="@item.IdGarantia">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
